<div class="container">
    <h1>Tela de Edição</h1>
    <form action="/atualizar" method="post">
        <div class="form-group">
            <label for="nome">Nome:</label>
            <input type="text" class="form-control" id="nome" name="nome" placeholder="Digite o nome" value="{{post.nome}}">
        </div>
        <div class="form-group">
            <label for="endereco">Endereço:</label>
            <input type="text" class="form-control" id="endereco" name="endereco" placeholder="Digite o endereço" value="{{post.endereco}}">
        </div>
        <div class="form-group">
            <label for="bairro">Bairro:</label>
            <input type="text" class="form-control" id="bairro" name="bairro" placeholder="Digite o bairro" value="{{post.bairro}}">
        </div>
        <div class="form-group">
            <label for="cep">CEP:</label>
            <input type="text" class="form-control" id="cep" name="cep" placeholder="Digite o CEP" value="{{post.cep}}">
        </div>
        <div class="form-group">
            <label for="cidade">Cidade:</label>
            <input type="text" class="form-control" id="cidade" name="cidade" placeholder="Digite a cidade" value="{{post.cidade}}">
        </div>
        <div class="form-group">
            <label for="estado">Estado:</label>
            <input type="text" class="form-control" id="estado" name="estado" placeholder="Digite o estado" value="{{post.estado}}">
        </div>
        <div class="form-group">
            <label for="telefone">Telefone:</label>
            <input type="text" class="form-control" id="telefone" name="telefone" placeholder="Digite o telefone" value="{{post.telefone}}">
        </div>

        <input type="hidden" class="form-control" id="id" name="id" value="{{post.id}}">

        <button type="submit" class="btn btn-primary">Salvar</button>
    </form>
</div>