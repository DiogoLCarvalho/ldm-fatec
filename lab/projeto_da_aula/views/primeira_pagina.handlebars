<div class="container my-5">
    <h2 class="text-center mb-4">Cadastro de Usuário</h2>
    <form action="/cadastrar" method="post" class="p-4 bg-light rounded shadow-sm">
        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label">Nome:</label>
                <input type="text" class="form-control" id="nome" name="nome" placeholder="Diogo Lima">
            </div>
            <div class="col-md-6">
                <label class="form-label">Endereço:</label>
                <input type="text" class="form-control" id="endereco" name="endereco" placeholder="Rua 42">
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label">Bairro:</label>
                <input type="text" class="form-control" id="bairro" name="bairro" placeholder="Jardim florido">
            </div>
            <div class="col-md-6">
                <label class="form-label">Cep:</label>
                <input type="text" class="form-control" id="cep" name="cep" placeholder="01001000">
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label">Cidade:</label>
                <input type="text" class="form-control" id="cidade" name="cidade" placeholder="São Paulo">
            </div>
            <div class="col-md-6">
                <label class="form-label">Estado:</label>
                <input type="text" class="form-control" id="estado" name="estado" placeholder="São Paulo">
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label">Telefone:</label>
                <input type="text" class="form-control" id="telefone" name="telefone" placeholder="25445672">
            </div>
            <div class="col-md-6">
                <label class="form-label">Celular:</label>
                <input type="text" class="form-control" id="celular" name="celular" placeholder="11982361221">
            </div>
        </div>

        <div class="text-center mt-3">
            <button type="submit" class="btn btn-primary btn mx-2 p-2" style="width: 200px;background-color: #3993DD;">Cadastrar</button>
            <button type="button" class="btn btn-danger btn mx-2 p-2"  style="width: 200px;background-color:#F9627D">
                <a class='text-decoration-none text-white'
                    href="/consulta">Cancelar</a>
            </button>
        </div>

    </form>
</div>