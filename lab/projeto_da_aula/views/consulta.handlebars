<div class="container my-5">
    <h2 class="text-center mb-4 fw-bold">Listagem de Usuários</h2>
    <div class="table-responsive">
        <table class="table table-striped table-bordered" style="border: .5px solid #333533;">
            <thead class="table-primary">
                <tr>
                    <th class="text-center text-white" style="background-color: #333533;border: .5px solid #000009;">Nome</th>
                    <th class="text-center text-white" style="background-color: #333533;border: .5px solid #000009;">Endereço</th>
                    <th class="text-center text-white" style="background-color: #333533;border: .5px solid #000009;">Bairro</th>
                    <th class="text-center text-white" style="background-color: #333533;border: .5px solid #000009;">Telefone</th>
                    <th class="text-center text-white" style="background-color: #333533;border: .5px solid #000009;">Estado</th>
                    <th class="text-center text-white" style="background-color: #333533;border: .5px solid #000009;">Ações</th>
                </tr>
            </thead>
            <tbody>
                {{#each posts}}
                {{#dataValues}}
                <tr>
                    <td>{{nome}}</td>
                    <td>{{endereco}}</td>
                    <td>{{bairro}}</td>
                    <td>{{telefone}}</td>
                    <td>{{estado}}</td>
                    
                    <td style="width: 180px;">
                        <a class="btn btn-sm btn-primary" href="/editar/{{id}}"
                            style="background-color: #3993DD;">&#9998; Editar</a>
                        <a class="btn btn-sm btn-danger" href="/excluir/{{id}}" style="background-color:#F9627D">
                            &#10006; Excluir</a>
                    </td>
                </tr>
                {{/dataValues}}
                {{/each}}
            </tbody>
        </table>
    </div>
</div>